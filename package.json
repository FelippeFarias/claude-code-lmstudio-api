{
  "name": "claude-code-lmstudio-api",
  "version": "1.0.0",
  "description": "OpenAI and LM Studio compatible API server using Claude Code SDK",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "lint": "biome check ./src",
    "lint:fix": "biome check --apply ./src",
    "format": "biome format --write ./src",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "author": "Common Creation, Co., Ltd.",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@vitest/ui": "^2.0.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
